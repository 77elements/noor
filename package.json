{
  "name": "noornote",
  "version": "0.1.0",
  "description": "High-performance Nostr web client - Light, fast, secure",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .js,.ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .js,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,ts,tsx,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,tsx,css,html}\"",
    "bundle-analyzer": "vite-bundle-analyzer",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "nostr",
    "web-client",
    "decentralized",
    "social",
    "vanilla-js",
    "performance"
  ],
  "author": "Alp <outreach.trend196@4wrd.cc>",
  "license": "MIT",
  "homepage": "https://github.com/77elements/noornote#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/77elements/noornote.git"
  },
  "bugs": {
    "url": "https://github.com/77elements/noornote/issues"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitest/coverage-v8": "^0.34.0",
    "@vitest/ui": "^0.34.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.3",
    "rollup-plugin-visualizer": "^5.9.2",
    "sass": "^1.69.0",
    "typescript": "^5.2.0",
    "vite": "^4.4.9",
    "vite-bundle-analyzer": "^0.7.0",
    "vitest": "^0.34.0"
  },
  "dependencies": {
    "bech32": "^2.0.0",
    "dataloader": "^2.2.2",
    "nostr-tools": "^1.17.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not op_mini all"
  ]
}
